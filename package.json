{
    "name": "pizza",
    "version": "1.0.0",
    "description": "Find highest rated pizza (or other query string) in Google Maps by distance from a location",
    "main": "main.js",
    "directories": {
        "example": "example"
    },
    "scripts": {
        "start": "npm run watch:all",
	"lite": "lite-server",
        "scss": "node-sass -o css/ css/",
        "watch:scss": "onchange 'css/*.scss' -- npm run scss",
        "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/druce/Pizza.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/druce/Pizza/issues"
    },
    "homepage": "https://github.com/druce/Pizza#readme",
    "devDependencies": {
        "lite-server": "^2.5.4",
        "minimist": "^1.2.5",
        "node-sass": "^4.14.1",
        "onchange": "^7.0.2",
        "parallelshell": "^3.0.2"
    }
}
